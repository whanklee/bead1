<html>
    <head>
        <title>Könyvlista</title>
        <meta charset="utf-8"/>
        <link rel = "stylesheet" href = "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />
    </head>
    <body>
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
                Új könyv sikeresen felvéve!
        </div>

        <div class="page-header">
            <h1>Felvett könyveim</h1>
        </div>

        <table class="table table-striped table-hover " id=bookTable>
            <thead>
                <tr>
                    <th>Időpont</th>
                    <th>Státusz</th>
                    <th>Író</th>
                    <th>Cím</th>
                    <th>Leírás</th>
                </tr>   
            </thead>
            <tbody>
                {{#each books}}
                <tr>
                    <td>{{date}}</td>
                    <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
                    <td>{{iro}}</td>
                    <td>{{cim}}</td>
                    <td><span class="badge">{{numberOfMessages}}</span> {{description}}</td>
                   <td><a href='/books/edit/{{id}}' class="btn btn-warning">Módosítás</a>
                      <td><a href='/books/delete/{{id}}' class="btn btn-danger">Törlés</a>
                    </td>
                    
                </tr>
                {{/each}}
            </tbody>
            </table>
            <p><a href="/books/new" class="btn btn-default">Új könyv felvétele</a></p>
    </body>
</html>