{{#each errorMessages}}
<div class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Bejelentkezés</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group">
            <label for="felhasznalonev" class="col-lg-2 control-label">Felhasználónév</label>
            <div class="col-lg-10">
                <input class="form-control" id="felhasznalonev" name="felhasznalonev" type="text" value="{{data.felhasznalonev}}">
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-lg-2 control-label">Jelszó</label>
            <div class="col-lg-10">
                <input class="form-control" type="password" id="password" name="password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Mégse</button>
                <button type="submit" class="btn btn-primary">Bejelentkezés</button>
            </div>
        </div>
    </fieldset>
</form>

<div class="list-group">
  <a href="/login/signup" class="list-group-item">
    Regisztráció
  </a>
</div>

